<?xml version="1.0" encoding="UTF-8"?><Configuration status="INFO">    <Appenders>        <Console name="ConsoleAppender" target="SYSTEM_OUT">            <PatternLayout pattern="%style{%date{DEFAULT}}{yellow}            %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green}            %message"/>        </Console>        <File name="DebugFile" fileName="LoggerDebug.txt">            <PatternLayout>                <pattern>%d %p %C{1.} [%t] %m%n</pattern>            </PatternLayout>        </File>        <File name="ErrorFile" fileName="LoggerError.txt">            <PatternLayout>                <pattern>%d %p %C{1.} [%t] %m%n</pattern>            </PatternLayout>        </File>    </Appenders>    <Loggers>        <Logger name="ErrorLogger" level="ERROR">            <AppenderRef ref="ErrorFile"/>        </Logger>        <Logger name="WarnLogger" level="WARN">            <AppenderRef ref="ErrorFile"/>        </Logger>        <Logger name="InfoLogger" level="INFO">            <AppenderRef ref="DebugFile"/>        </Logger>        <Logger name="DebugLogger" level="DEBUG">            <AppenderRef ref="DebugFile"/>        </Logger>        <Logger name="TraceLogger" level="TRACE">            <AppenderRef ref="DebugFile"/>        </Logger>        <Root>        </Root>    </Loggers></Configuration>